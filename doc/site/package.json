{
  "name": "claude-code-doc-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "generate-docs": "node scripts/generate-docs.js",
    "generate": "pnpm run generate-docs",
    "start": "node scripts/start-dev.js --port 9987 --host claude.localhost",
    "start:silent": "node scripts/start-dev.js --port 9987 --host claude.localhost --no-open",
    "build": "pnpm run generate && docusaurus build",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve --port 9987 --host claude.localhost"
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/plugin-content-docs": "^3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@docusaurus/theme-common": "^3.9.2",
    "@docusaurus/theme-mermaid": "^3.9.2",
    "@mdx-js/react": "^3.1.1",
    "clsx": "^2.1.1",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "remark-breaks": "^4.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "gray-matter": "^4.0.3"
  },
  "engines": {
    "node": ">=20.0"
  }
}
